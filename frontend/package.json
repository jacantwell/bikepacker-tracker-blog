{
  "name": "typescript-react-tailwind-vite",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:content": "node scripts/deploy-content.js",
    "dev:full": "npm run content:serve & npm run dev",
    "content:build": "npm run build:content",
    "content:serve": "npm run build:content && mkdir -p local-server/content && cp -r dist-content/* local-server/content/ && cd local-server && python3 -m http.server 3001",
    "content:serve-bg": "npm run build:content && mkdir -p local-server/content && cp -r dist-content/* local-server/content/ && cd local-server && python3 -m http.server 3001 &",
    "local:setup": "npm run build:content && mkdir -p local-server/content && cp -r dist-content/* local-server/content/ && echo 'VITE_API_URL=http://localhost:3001' > .env.local",
    "local:clean": "rm -rf dist-content local-server && rm -f .env.local",
    "deploy:infrastructure": "./deploy-infrastructure.sh",
    "deploy:content": "./deploy-content.sh",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@reduxjs/toolkit": "^1.9.5",
    "@vitejs/plugin-react": "^4.4.0",
    "axios": "^1.8.4",
    "buffer": "^6.0.3",
    "classnames": "^2.5.1",
    "date-fns": "^4.1.0",
    "mapbox-gl": "^3.11.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-map-gl": "^8.0.4",
    "react-markdown": "^10.1.0",
    "react-router": "^7.5.1",
    "react-syntax-highlighter": "^15.6.1",
    "redux": "^4.2.1",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@types/react": "^18.0.37",
    "@types/react-dom": "^18.0.11",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vitejs/plugin-react-swc": "^3.0.0",
    "autoprefixer": "^10.4.14",
    "daisyui": "^3.1.7",
    "eslint": "^8.38.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "gray-matter": "^4.0.3",
    "path": "^0.12.7",
    "postcss": "^8.4.24",
    "prettier": "2.8.8",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "react-redux": "^8.1.1",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.0.2",
    "vite": "^4.3.9"
  }
}
